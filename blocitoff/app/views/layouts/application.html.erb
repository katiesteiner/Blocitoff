<!DOCTYPE html>
<html>
<head>
  <title>Blocitoff</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="container">
  <ul class="nav nav-tab">
  <div class="pull-right user-info">

    <% if current_user %>
      <%= image_tag(current_user.avatar.tiny.url) if current_user.avatar? %>
      Hello <%= link_to (current_user.email), edit_user_registration_path %>! 
      <%= link_to user_path(current_user), class: 'btn btn-primary btn=sm' do %>
      <span class="fa fa-sticky-note-o"></span>
      <% end %>
      <%= link_to edit_user_registration_path, class: 'btn btn-primary btn-sm' do %>
       <span class="fa fa-cog fa-lg"></span>
      <% end %>
      <%= link_to destroy_user_session_path, method: :delete, class: 'btn btn-primary btn-sm' do %>
      <span class="fa fa-sign-out"></span>
      <% end %>

    <% end %>
  </div>
  </ul>

<%= yield %>
</div>
</body>
</html>
