<% @items.each{|item| item.delete_after_7_days} %>
<%= content_tag :div, id: "item-#{item.id}" do %>
  <%= link_to "", [item.user, item], method: :delete, class: 'glyphicon glyphicon-ok', remote: true %>
  <%= item.name %> 
  <p>Created at: <%= item.created_at %>
  | Days Left: <%= item.days_left %></p>
<% end %>
